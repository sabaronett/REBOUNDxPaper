#!/bin/bash

function check_okay {
	if [ $? -ne 0 ]
	then
		exit 1
	fi
}


function do_one {
	cp $1 inlist
	check_okay
	rm -rf $2
	echo 'run' $1
	./rn1
	check_okay
  if [ ! -r $2 ]
  then
  	echo
  	echo "******************************************************************"
  	echo 'failed to create' $2 'when running' $1
  	echo "******************************************************************"
  	echo
  	exit 1
  fi
  echo
  echo 'finished' $1
  rm -rf $3
  mkdir $3
  mv LOGS/* $3
  echo
  echo '***'
  echo '***'
  echo '***'
  echo '***'
  echo '***'
  echo '***'
  echo
}


date "+DATE: %Y-%m-%d%nTIME: %H:%M:%S"

# do_one inlist_start_header start.mod LOGS_start
do_one inlist_to_end_agb_header end_agb.mod LOGS_to_end_agb
# do_one inlist_to_wd_header final.mod LOGS_to_wd

date "+DATE: %Y-%m-%d%nTIME: %H:%M:%S"

echo 'finished all inlists for 1M_pre_ms_to_wd'

